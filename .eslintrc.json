{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "prettier/standard",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error","always"],
        "prettier/prettier": "error",
        "quotes": ["error", "double"],
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline"
        }],
        "space-before-function-paren": ["error", "never"]
    },
    "plugins": ["jest", "prettier"]
}
